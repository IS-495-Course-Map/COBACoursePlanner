@model COBACoursePlanner.Models.MajorSelectViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="" asp-action="Index" method="get">
    <p>
        <select asp-for="Major" asp-items="Model.Majors">
        </select>
        
        Title: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ClassForMajors[0].MajorID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClassForMajors[0].ClassID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ClassForMajors) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MajorID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClassID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MajorClassID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MajorClassID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MajorClassID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
